{
  "name": "v3d-player",
  "version": "1.2.0",
  "description": "Vue3 Dplayer-Lite",
  "main": "dist/v3d-player.umd.js",
  "module": "dist/v3d-player.es.js",
  "types": "d.ts/index.d.ts",
  "scripts": {
    "dev": "vite",
    "dts": "vue-tsc --declaration --emitDeclarationOnly",
    "lint": "eslint src --fix --ext .ts,.tsx,.vue,.js,.jsx",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "publish:last": "npm run build && npm publish"
  },
  "files": [
    "dist",
    "d.ts"
  ],
  "exports": {
    ".": {
      "import": "./dist/v3d-player.es.js",
      "require": "./dist/v3d-player.umd.js"
    },
    "./dist/style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "keywords": [
    "player",
    "video",
    "html5"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lin557/v3d-player"
  },
  "author": "lin557",
  "license": "MIT",
  "dependencies": {
    "dplayer-lite": "^1.27.23",
    "flv.js": "^1.6.2",
    "hls.js": "^1.3.3",
    "vue": "^3.2.47"
  },
  "devDependencies": {
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.9.0",
    "prettier": "^2.8.4",
    "sass": "^1.58.3",
    "typescript": "^4.9.5",
    "vite": "^4.3.5",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-vue-setup-extend": "^0.4.0",
    "vue-tsc": "^1.2.0"
  }
}
